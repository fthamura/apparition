<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:layout_gravity="center_vertical|center_horizontal">
	<ImageView android:id="@+id/icon"
		android:layout_gravity="right" android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	<TextView android:id="@+id/name" android:text=""
		android:paddingLeft="10dip" android:layout_weight="0.5"
		android:layout_gravity="center" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textColor="#000000" />
</LinearLayout>