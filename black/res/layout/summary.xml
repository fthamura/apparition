<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:background="#ffffff" android:orientation="vertical">
	<com.markupartist.android.widget.ActionBar
		xmlns:app="http://schemas.android.com/apk/res/org.meruvian.midas.android"
		android:id="@+id/actionbarLogin" app:title="Meruvian" style="@style/ActionBar" />
		<LinearLayout android:id="@+id/linearLayout1"
			android:layout_width="fill_parent" android:paddingLeft="10dip"
			android:paddingRight="10dip" android:orientation="vertical"
			android:layout_gravity="top" android:layout_height="wrap_content"
			android:layout_marginTop="10dip">
			<TextView android:text="1. Multiple Answer (Bullets)" style="@style/TextBody"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:paddingTop="10dip" android:textSize="14dip"
				android:textColor="#000000"></TextView>
			<TextView android:layout_marginLeft="10dip" android:id="@+id/no1"
				android:layout_width="wrap_content" android:paddingTop="5dip"
				android:textSize="14dip" android:layout_height="wrap_content"
				android:textColor="#000000" />
			<TextView android:text="2. Singgle Answer (Bullets)" style="@style/TextBody"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:paddingTop="10dip" android:textSize="14dip"
				android:textColor="#000000"></TextView>
			<TextView android:layout_marginLeft="10dip" android:id="@+id/no2"
				android:layout_width="wrap_content" android:paddingTop="5dip"
				android:textSize="14dip" android:layout_height="wrap_content"
				android:textColor="#000000" />
			<TextView android:text="3. Singgle Choice Answer Dropdown"
				style="@style/TextBody" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:paddingTop="10dip"
				android:textSize="14dip" android:textColor="#000000"></TextView>
			<TextView android:layout_marginLeft="10dip" android:id="@+id/no3"
				android:layout_width="wrap_content" android:paddingTop="5dip"
				android:textSize="14dip" android:layout_height="wrap_content"
				android:textColor="#000000" />
			<ExpandableListView android:id="@+id/android:list"
				android:textColor="#000000" android:paddingTop="10dip"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:footerDividersEnabled="true" android:groupIndicator="@android:color/transparent" />
			<TextView android:text="5. Open Ended (Comment)" style="@style/TextBody"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:paddingTop="10dip" android:textSize="14dip"
				android:textColor="#000000"></TextView>
			<TextView android:layout_marginLeft="10dip" android:id="@+id/no5"
				android:layout_width="wrap_content" android:paddingTop="5dip"
				android:textSize="14dip" android:layout_height="wrap_content"
				android:textColor="#000000" />
			<Button android:textStyle="bold" android:textColor="#FFFFFF"
				android:id="@+id/h" android:background="@drawable/black_button_background"
				android:layout_margin="10.0dip" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Save and Back"
				android:layout_gravity="right" />
		</LinearLayout>
	

</LinearLayout>